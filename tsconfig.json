{
    "compilerOptions": {
        "outDir": "./lib/",
        "sourceMap": true,
        "noImplicitAny": false,
        "removeComments": true,
        "module": "commonjs",
        "target": "es2016",
        "allowJs": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "baseUrl": "./src",
        "types": [
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es2017",
            "es6",
            "scripthost",
            "dom"
        ],
    },
    "include": [
        "./src/*.ts"
    ],
    "exclude": [
     "node_modules"
    ]
}